@model IEnumerable<WebApplication1.Models.Usuario>
@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="offset-9 col-3 mb-3">
        <a asp-action="Crear" asp-controller="Home" class="btn-success d-block mx-auto btn-lg"> <i class="fa-solid fa-plus"></i> Nuevo Usuario</a>
    </div>
</div>
<div class="container-fluid">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h1 class="text-white"><strong>Lista de usuarios</strong></h1>

            </div>

            <div class="card-body">
                <div class="table-responsive">
                    @* --el @ sirve para agregar en lenguaje c#*@
                    @if (Model.Count() > 0)
                    {
                        <table class=" table table-bordered" id="tblUsuario" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(x => x.Nombre)</th>
                                    <th>@Html.DisplayNameFor(x => x.User)</th>
                                    <th>@Html.DisplayNameFor(x => x.Password)</th>
                                    <th>@Html.DisplayNameFor(x => x.Fkrol)</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(x =>item.Nombre)</td>
                                        <td>@Html.DisplayFor(x =>item.User)</td>
                                        <td>@Html.DisplayFor(x =>item.Password)</td>
                                        <td>@Html.DisplayFor(x =>item.Roles.Nombre)</td>
                                        <td>
                                            <a class="btn btn-warning"> <i class="fa-solid fa-pen-to-square"></i> Editar</a>
                                            <a class="btn btn-danger"> <i class="fa-solid fa-trash"></i> Eliminar</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                    }
                    else
                    {
                        <p>No hay registro</p>
                    }
                </div>
            </div>


        </div>


    </div>

</div>
